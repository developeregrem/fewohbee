<form id="entry-form-new" role="form" method="POST"
      data-controller="settings prices"
      data-action="submit->prices#beforeSubmitAction submit->settings#submitFormAction"
      data-url="{{ path('prices.create.price') }}"
      data-success-url="{{ path('prices.overview') }}"
      data-prices-price-id="new"
      data-prices-start-selector="#periodstart-new"
      data-prices-end-selector="#periodend-new"
      data-prices-periods-selector="#periods-field-new">
    <div class="modal-body ps-5 pe-5">
        <div id="flash-message-overlay">
            <div class="col">
            </div>
        </div>
        {% include 'Prices/price_form_input_fields.html.twig' %}
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'button.cancel'|trans }}</button>
        <input type="submit" value="{{ 'button.save'|trans }}" class="btn btn-primary"/>
    </div>
</form>
