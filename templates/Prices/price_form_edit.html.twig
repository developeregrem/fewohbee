<form id="entry-form-{{ price.id }}" role="form" method="POST"
      data-controller="settings prices"
      data-action="submit->prices#beforeSubmitAction submit->settings#submitFormAction"
      data-url="{{ path('prices.edit.price', {'id': price.id}) }}"
      data-prices-price-id="{{ price.id }}"
      data-prices-start-selector="#periodstart-{{ price.id }}"
      data-prices-end-selector="#periodend-{{ price.id }}"
      data-prices-periods-selector="#periods-field-{{ price.id }}">
    <div class="modal-body ps-5 pe-5">
        <div id="flash-message-overlay">
        </div>
        <div class="row" id="edit-button-area">
            <div class="col">
                <h4 class="pb-2">
                    <small>
                    <a href="#"
                       data-action="click->settings#enableEditAction"
                       data-fieldset-selector="#entry-form-fieldset-{{ price.id }}"
                       data-save-selector="#entry-submit-{{ price.id }}"
                       data-edit-area-selector="#edit-button-area"
                       title="{{ 'button.edit'|trans }}" class="float-end text-secondary">
                            <i class="fas fa-edit"></i></a>
                    </small>
                </h4>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col"> 
                {% include 'Prices/price_form_input_fields.html.twig' %}
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'button.cancel'|trans }}</button>
         <input type="submit" value="{{ 'button.save'|trans }}" id="entry-submit-{{ price.id }}"
                class="btn btn-primary d-none">
    </div>
</form>
