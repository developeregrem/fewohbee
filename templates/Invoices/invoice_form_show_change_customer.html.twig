{{ form_start(form, {'attr': {'data-controller': 'invoices', 'data-action': 'submit->invoices#submitFormAction', 'id': 'new-customer'}}) }}
    <div class="modal-body">
        <div class="ps-5 pe-5">
            <div class="row">
                <div class="col-md-7">
                    {% include 'Invoices/_customer_form.html.twig' %}
                </div>
                <div class="col-md-5">
                    {% include 'Invoices/invoice_form_reservation_list_fields.html.twig' %}
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <ul class="pagination me-auto">
            <li class="page-item"
                {% if invoice.id == null %}
                    data-action="click->invoices#openModalAction" data-url="{{ path('invoices.create.invoice.positions') }}"
                {% else %}
                    data-action="click->invoices#showInvoiceAction" data-url="{{ path('invoices.get.invoice', {'id': invoice.id}) }}" data-edit="true"
                {% endif %}>
                <a class="page-link" href="#">&larr; {{ 'button.back'|trans }}</a></li>
        </ul>
        <input type="submit" value="{{ 'button.save'|trans }}" class="btn btn-primary" />
    </div>
{{ form_end(form) }}
