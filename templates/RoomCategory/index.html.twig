{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} -  {{ 'category.title'|trans }}
{% endblock %}

{% block description %}
    {{ parent() }} -  {{ 'category.description'|trans }}
{% endblock %}

{% block content %}
<div class="container" data-controller="settings">
    <div class="row">
        <div class="col">
            <button type="button" class="btn btn-secondary"
                    data-action="click->settings#openModalAction"
                    data-url="{{ path('room_category_new') }}"
                    data-title="{{ 'nav.category.add'|trans }}"
                    data-bs-toggle="modal"
                    data-bs-target="#modalCenter">
                <i class="fas fa-plus"></i> {{ 'nav.category.add'|trans }}</button>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <table class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>{{ 'category.name'|trans }}</th>
                    <th>{{ 'category.action'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for category in room_categories %}
                    <tr>
                        <td>{{ category.name }}{% if category.acronym|length > 0 %} ({{ category.acronym }}){% endif %}</td>
                        <td>
                            <a href="#" title="{{ 'button.details'|trans }}" data-bs-toggle="modal" data-bs-target="#modalCenter">
                                <i class="fas fa-info-circle"
                                   data-action="click->settings#openModalAction"
                                   data-url="{{ path('room_category_edit', {'id': category.id}) }}"
                                   data-title="{{ 'button.details'|trans }}"></i></a>
                            <a href="#" title="{{ 'button.edit'|trans }}" data-bs-toggle="modal" data-bs-target="#modalCenter">
                                <i class="fas fa-edit"
                                   data-action="click->settings#openModalAction"
                                   data-url="{{ path('room_category_edit', {'id': category.id}) }}"
                                   data-title="{{ 'button.edit'|trans }}"
                                   data-enable-edit="true"></i></a>
                            {% set id = category.id %}
                            {% set targetUrl = path('room_category_delete', {'id': category.id}) %}
                            {% use "common/delete_popover.html.twig" %}
                            <a href="#" title="{{ 'button.delete'|trans }}">
                                <i class="fas fa-trash-alt"
                                   data-popover="delete"
                                   data-title="{{ 'registrationbook.delete.ask'|trans }}"
                                   data-bs-content='{{ block('deletePopoverContent') }}'></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
