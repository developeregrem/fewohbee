            $('#modalCenter .modal-title').text("{{ 'reservation.details'|trans }}");
            $('#modalCenter').modal('show')

            $.ajax({
                url: url,
                type: "get",
                error: function (xhr, ajaxOptions, thrownError) {
                    alert(xhr.status);
                },
                success: function (data) {
