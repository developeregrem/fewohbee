<table class="table table-hover" data-controller="reservations">
    <thead>
    <tr>        
        <th class="border-top-0">{{ 'appartment.number'|trans }}</th>
        <th class="border-top-0">{{ 'appartment.bedsmax'|trans }}</th>
        <th class="border-top-0">{{ 'appartment.description'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for appartment in appartments %}
        <tr data-action="click->reservations#toggleAppartmentOptionsAction" data-appartment-id="{{ appartment.id }}">
            <td>{{ appartment.number }}</td>
            <td>{{ appartment.bedsmax }}</td>
            <td>{{ appartment.description }}</td>
        </tr>
        <tr>
            <td colspan="4" id="appartment-{{ appartment.id }}" class="d-none appartment-options">
                <form id="appartment-options-{{ appartment.id }}">
                    <div class="row">
                        {% include 'Reservations/reservations_form_appartment_options_input_fields.html.twig' %}
                        <div class="col-sm-3">
                        <button class="btn btn-secondary" type="button"
                                data-action="click->reservations#editUpdateReservationAction"
                                data-appartment-id="{{ appartment.id }}">{{ 'button.save'|trans }}</button>
                        </div>
                    </div>
                </form>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
