<div class="modal-body">
    <div class="ps-5 pe-5">
        <div class="row">
            <div class="col"> 
                <div class="btn-group">
                        <button type="button" id="button-filter-time" class="btn btn-primary"
                                data-action="click->invoices#showTimeFilterAction">{{ 'invoice.open.reservations.filter.time'|trans }}</button>
                        <button type="button" id="button-filter-customer" class="btn btn-secondary"
                                data-action="click->invoices#showCustomerFilterAction">{{ 'invoice.open.reservations.filter.customer'|trans }}</button>
                </div>
            </div>
        </div>
        <div id="container-invoice-filter-reservations-period" class="mt-4">
            <form id="invoice-filter-reservations-period" role="form">
                <div class="row">
                    <div class="col">
                            <input type="date" class="form-control" id="from" name="from" 
                                   placeholder="{{ 'invoice.startdate'|trans }}" data-action="change->invoices#getReservationsInPeriodAction" data-url="{{ path('invoices.get.reservations.in.period') }}">
                    </div>
                    <div class="col">
                        <input type="date" class="form-control" id="end" name="end" 
                               placeholder="{{ 'invoice.enddate'|trans }}" data-action="change->invoices#getReservationsInPeriodAction" data-url="{{ path('invoices.get.reservations.in.period') }}">
                    </div>
                </div>
            </form>
        </div>
        <div class="row">
            <div id="container-invoice-filter-reservations-customer" class="col d-none mt-4">
               <form id="invoice-filter-reservations-customer-name" role="form" data-action="submit->invoices#getReservationsByCustomerNameAction" data-url="{{ path('invoices.get.reservations.for.customer') }}">
                    <input type="input" class="form-control" id="lastname" name="lastname"
                           placeholder="{{ 'invoice.select.customer.search.input.placeholder'|trans }}">
                </form>
            </div>
        </div>
        <div class="row mt-4">
            <div id="container-invoice-filter-reservations-result" class="col">
            </div>
        </div>
    </div>
</div>
