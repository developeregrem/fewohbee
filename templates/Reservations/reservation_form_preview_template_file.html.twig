<form id="template-form" class="form-horizontal" role="form"
      data-controller="reservations"
      data-action="submit->reservations#saveTemplateFileAction"
      data-url="{{ path('settings.templates.file.save') }}">
    <fieldset id="template-form-fieldset-primary-">
        <div class="row">
            <label for="subject" class="col-sm-3 col-form-label">Bezeichnung
                *</label>

            <div class="col-sm-9">
                <input type="text" class="form-control" name="subject"
                       value="{{ template.name }}" required>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-sm">
                <textarea name="msg" id="editor1" rows="10" cols="70">{{ templateOutput|raw }}</textarea>
            </div>
        </div>
    </fieldset>

    <input name="_csrf_token" value="{{ token }}" type="hidden">
    <input name="templateId" value="{{ template.id }}" type="hidden">
    <div class="float-end">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'button.cancel'|trans }}</button>
        <input type="submit" value="{{ 'button.save'|trans }}" class="btn btn-primary" />
    </div>
</form>
