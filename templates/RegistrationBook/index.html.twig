{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} -  Kundenverwaltung
{% endblock %}

{% block description %}
    {{ parent() }} -  Kundenverwaltung
{% endblock %}

{% block content %}
    <div class="container"
         data-controller="registrationbook reservations"
         data-registrationbook-search-url-value="{{ path('registrationbook.search') }}">
        <div class="row">
            <div class="col-md-6 pe-2">
                <form class="form" id="registrationbook-search-form"
                      data-registrationbook-target="searchForm"
                      data-action="submit->registrationbook#searchAction">
                    <input type="search" class="form-control" id="search" name="search"
                           data-registrationbook-target="searchInput"
                           data-action="input->registrationbook#searchInputAction"
                           placeholder="{{ 'nav.customer.search'|trans }}" value="{{ search }}"/>
                </form>
            </div>
            <div class="col-md ps-0">
                <button class="btn btn-secondary" type="button"
                        data-action="click->registrationbook#searchAction">
                    <i class="fas fa-search"></i> {{ 'nav.customer.search'|trans }}
                </button>
            </div>
            <div class="col-md text-end">
                <div class="btn-group">
                    <button type="button" class="btn btn-secondary" id="openAdd"
                            data-action="click->registrationbook#openAddReservationsAction"
                            data-url="{{ path('registrationbook.showadd.reservations') }}"
                            data-title="{{ 'registrationbook.addreservations'|trans }}"
                            data-bs-toggle="modal" data-bs-target="#modalCenter">
                        <i class="fas fa-plus"></i> {{ 'registrationbook.addreservations'|trans }}
                    </button>
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div id="reservationbook-table" class="col" data-registrationbook-target="table">
                {% include 'RegistrationBook/registrationbook_table.html.twig' %}
            </div>
        </div>
    </div>
{% endblock %}
