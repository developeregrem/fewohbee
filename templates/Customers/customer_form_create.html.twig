<form id="customer-form-new" class="form-horizontal" role="form"
      data-controller="customer-form"
      data-customer-form-mode-value="create"
      data-customer-form-submit-url-value="{{ path('customers.create.customer')}}"
      data-customer-form-success-url-value="{{ path('customers.overview') }}"
      data-customer-form-city-lookup-url-value="{{ path('customers.citylookup', {'countryCode': 'placeholder1', 'postalCode': 'placeholder2'}) }}"
      data-customer-form-address-lookup-url-value="{{ path('customers.search.address', {'address': 'placeholder'}) }}"
      data-action="submit->customer-form#submitAction">
    <div class="modal-body ps-5 pe-5">
        <div class="container-fluid">
            <div id="flash-message-overlay" data-customer-form-target="flashOverlay">
                <div class="col">
                </div>
            </div>
            {% include 'Customers/customer_form_create_input_fields.html.twig' %}
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default" data-bs-dismiss="modal">{{ 'button.cancel'|trans }}</button>
        <input type="submit" value="{{ 'button.save'|trans }}" class="btn btn-primary"/>
    </div>
</form>
