{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} -  {{ 'login.pwforgotten.reset.title'|trans }}{% endblock %}

{% block description %}{{ parent() }} -  {{ 'login.pwforgotten.reset.description'|trans }}{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-md-center" style="padding-top: 90px;">
        <div class="col-md-5 card">
            <div class="card-body">
                <legend>{{ 'login.pwforgotten.reset.title'|trans }}</legend>
                {{ form_start(resetForm, {'attr': {'data-turbo': 'false'}}) }}
                    {{ form_row(resetForm.plainPassword) }}
                    <button class="btn btn-primary btn-block">{{ 'login.pwforgotten.reset.button'|trans }}</button>
                {{ form_end(resetForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
