{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }} -  Benutzerverwaltung
{% endblock %}

{% block description %}
    {{ parent() }} -  Userverwaltung
{% endblock %}

{% block content %}
<div class="container" data-controller="settings">
    <div class="row">
        <div class="col">
            <button type="button" class="btn btn-default"
                    data-action="click->settings#openModalAction"
                    data-url="{{ path('users.new.user') }}"
                    data-title="{{ 'nav.user.add'|trans }}"
                    data-bs-toggle="modal"
                    data-bs-target="#modalCenter">
                <i class="fas fa-plus"></i> {{ 'nav.user.add'|trans }}</button>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <table class="table table-bordered table-hover">
                <thead>
                <tr>
                    <th>{{ 'user.username'|trans }}</th>
                    <th>{{ 'user.firstname'|trans }}</th>
                    <th>{{ 'user.lastname'|trans }}</th>
                    <th>{{ 'user.action'|trans }}</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.username }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.lastname }}</td>
                        <td>
                            <a href="#" title="{{ 'button.details'|trans }}" data-bs-toggle="modal" data-bs-target="#modalCenter">
                                <i class="fas fa-info-circle"
                                   data-action="click->settings#openModalAction"
                                   data-url="{{ path('users.edit.user', {'id': user.id}) }}"
                                   data-title="{{ 'button.details'|trans }}"></i></a>
                            <a href="#" title="{{ 'button.edit'|trans }}">
                                <i class="fas fa-edit" data-bs-toggle="modal" data-bs-target="#modalCenter"
                                   data-action="click->settings#openModalAction"
                                   data-url="{{ path('users.edit.user', {'id': user.id}) }}"
                                   data-title="{{ 'button.edit'|trans }}"
                                   data-enable-edit="true"></i></a>
                            {% set id = user.id %}
                            {% set targetUrl = path('users.delete.user', {'id': user.id}) %}
                            {% use "common/delete_popover.html.twig" %}
                            <a href="#" title="{{ 'button.delete'|trans }}">
                                <i class="fas fa-trash-alt"
                                   data-popover="delete"
                                   data-title="{{ 'registrationbook.delete.ask'|trans }}"
                                   data-bs-content='{{ block('deletePopoverContent') }}'></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
</div>
{% endblock %}
