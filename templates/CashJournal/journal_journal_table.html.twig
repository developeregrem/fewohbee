<table class="table table-bordered table-hover">
    <thead>
    <tr>
        <th>{{ 'journal.month'|trans }}</th>
        <th>{{ 'journal.cash.start'|trans }}</th>
        <th>{{ 'journal.cash.end'|trans }}</th>
        <th>{{ 'journal.cash.closed'|trans }} | {{ 'journal.cash.booked'|trans }}</th>
        <th>{{ 'journal.action'|trans }}</th>
    </tr>
    </thead>
    <tbody>
    {% for journal in journals %}
        <tr>
            <td>{{ getLocalizedMonth(journal.cashMonth, 'MMMM', app.request.locale) }}</td>
            <td>{{ journal.cashStart|number_format(2, ',', '.') }}</td>
            <td>{{ journal.cashEnd|number_format(2, ',', '.') }}</td>
            <td>
                <a href="#" title="{{ 'journal.cash.closed'|trans }}?">
                    <i class="fas fa-lock{% if journal.isClosed == 0 %}-open{% endif %}"
                       data-action="click->cashjournal#editStatusAction"
                       data-url="{{ path('cashjournal.journal.edit.status', {'id': journal.id}) }}"
                       data-status="closed"></i>
                </a>
                | 
                <a href="#" title="{{ 'journal.cash.booked'|trans }}?">
                    <i class="fas fa-folder{% if journal.isBooked == 0 %}-open{% endif %}"
                       data-action="click->cashjournal#editStatusAction"
                       data-url="{{ path('cashjournal.journal.edit.status', {'id': journal.id}) }}"
                       data-status="booked"></i>
                </a>
            </td>
            <td>
                <a href="{{ path('cashjournal.journal.entry.index', {'id': journal.id}) }}" title="{{ 'button.details'|trans }}">
                    <i class="fas fa-info-circle"></i></a>
                {% if not journal.isClosed %}
                <a href="#" title="{{ 'button.edit'|trans }}">
                    <i class="fas fa-edit"
                       data-action="click->cashjournal#openModalAction"
                       data-url="{{ path('cashjournal.journal', {'id': journal.id}) }}"
                       data-title="{{ 'journal.edit'|trans }}"
                       data-bs-toggle="modal" data-bs-target="#modalCenter"></i></a>
                
                <a href="#" title="{{ 'button.add'|trans }}">
                    <i class="fas fa-plus"
                       data-action="click->cashjournal#openModalAction"
                       data-url="{{ path('cashjournal.journal.entry.new', {'id': journal.id}) }}"
                       data-title="{{ 'journal.entry.add'|trans }}"
                       data-bs-toggle="modal" data-bs-target="#modalCenter"></i></a>
                {% endif %}
                <a class="export-link"
                   href="{{ path('cashjournal.journal.export.pdf', {'id': journal.id, 'templateId': 0 }) }}"
                   title="{{ 'button.export.pdf'|trans }}">
                    <i class="fas fa-download"></i></a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
<input id="page" type="hidden" name="page" value="{{ page }}" />
{% include 'paginator.html.twig' with { 'url' : path('cashjournal.overview'), 'pagination_action': 'click->cashjournal#paginateAction' } %}
